{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "declaration": true,
    //"emitDeclarationOnly": true,
    "declarationDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
