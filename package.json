{
  "name": "magic-comments",
  "version": "2.1.9",
  "description": "Node.js tool for adding Webpack magic comments at build time.",
  "type": "module",
  "main": "dist",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/types.d.cts",
        "default": "./dist/cjs/index.cjs"
      },
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/esm/types.d.ts",
  "engines": {
    "node": ">=12.20.0"
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "build": "duel --dirs",
    "lint": "eslint . src __tests__ --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "BABEL_ENV=test jest",
    "prepack": "npm run build"
  },
  "dependencies": {
    "micromatch": "^4.0.4",
    "schema-utils": "^4.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@jest/globals": "^29.6.1",
    "@knighted/duel": "^1.0.0-rc.2",
    "@types/micromatch": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.0",
    "jest": "^29.6.1",
    "prettier": "^2.8.8",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/morganney/magic-comments.git"
  },
  "bugs": {
    "url": "https://github.com/morganney/magic-comments/issues"
  },
  "keywords": [
    "node",
    "build",
    "tool",
    "webpack",
    "magic comments"
  ],
  "files": [
    "dist"
  ],
  "author": "Morgan Ney <morganney@gmail.com>",
  "license": "MIT"
}
